<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#2A2A2A">

    <!-- Summary Text -->
    <TextView
        android:id="@+id/patternSummaryText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Loading patterns..."
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:padding="12dp"
        android:background="#1E1E1E"
        android:layout_marginBottom="16dp" />

    <!-- Time-based Bar Chart -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activity by Time"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/timePatternChart"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="24dp" />

    <!-- Frequency Pie Chart -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Most Common Requests"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/frequencyPatternChart"
        android:layout_width="match_parent"
        android:layout_height="250dp" />

</LinearLayout>
